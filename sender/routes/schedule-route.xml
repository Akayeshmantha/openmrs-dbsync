<routes xmlns="http://camel.apache.org/schema/spring">
  <route id="schedule">
    <from uri="scheduler:sync?delay=48h"/>
    <to uri="jpa://org.openmrs.sync.app.management.entity.TableSyncStatus?query=select p from org.openmrs.sync.app.management.entity.TableSyncStatus p"/>
    <split streaming="true">
      <simple>${body}</simple>
      <setHeader headerName="OpenMrsEntitySyncStatusId">
        <simple>${in.body.getId()}</simple>
      </setHeader>
      <to uri="seda:sync"/>
    </split>
  </route>
</routes>
